# PacketParamedic environment configuration
# Copy to .env and adjust for your deployment.

# API listen address
PP_BIND_ADDR=0.0.0.0:8080

# SQLite database path
PP_DB_PATH=./data/packetparamedic.db

# Log level: trace | debug | info | warn | error
PP_LOG_LEVEL=info

# Data directory for spool, exports, and support bundles
PP_DATA_DIR=./data

# Path to iperf3 binary (leave empty to use native Rust engine)
PP_IPERF3_PATH=/usr/bin/iperf3

# Enable/disable the scheduling engine
PP_SCHEDULER_ENABLED=true

# Allowed hours for bandwidth-heavy speed tests (cron expression, * = anytime)
PP_SPEED_TEST_WINDOW=*

# Daily bandwidth budget for WAN tests in GB (0 = unlimited)
PP_DAILY_BW_BUDGET_GB=0
